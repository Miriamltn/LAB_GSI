<Window x:Class="LAB_GSI.VentanaInicio"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LAB_GSI"
        mc:Ignorable="d"
        Title="VentanaInicio" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Imagenes/fondoInicio.png" Stretch="UniformToFill"/>
        </Grid.Background>
        <Button x:Name="btn_inicio" 
        Content="Acceder" 
        HorizontalAlignment="Left" 
        Margin="356,309,0,0" 
        VerticalAlignment="Top" 
        Height="38"
        Width="84"
        Click="btn_empezar_Click" 
        FontWeight="Bold"
        BorderThickness="0" Background="#FFB5DC7E">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0" CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>