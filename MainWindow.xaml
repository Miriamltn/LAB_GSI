                                    </StackPanel>
                                </StackPanel>

                                <StackPanel x:Name="video_2" Orientation="Vertical" Margin="40,8,24,16">
                                    <TextBox Text="El río de la memoria" Width="157" Margin="0,0,0,10" Background="#FF938874" FontWeight="Bold" FontFamily="Bodoni MT" FontSize="16" HorizontalAlignment="Center" TextAlignment="Center"/>
                                    <StackPanel Orientation="Horizontal">
                                        <Button x:Name="video2" Click="AbrirVideo2" Content="Ver película" Background="#FFA2E6FD" Cursor="Hand" Width="130" Height="50" FontWeight="Bold" Style="{StaticResource RoundedButton}"/>
                                        <Image Source="imagenes/video2.jpeg" Width="103" Height="100" Margin="30,0,0,0"/>
                                    </StackPanel>
                                </StackPanel>

                                <StackPanel x:Name="video_3" Orientation="Vertical" Margin="40,8,24,16">
                                    <TextBox Text="Y Tu Quien Eres" Width="157" Margin="0,0,0,10" Background="#FF938874" FontWeight="Bold" FontFamily="Bodoni MT" FontSize="16" TextAlignment="Center" HorizontalAlignment="Center"/>
                                    <StackPanel Orientation="Horizontal">
                                        <Button x:Name="video3" Click="AbrirVideo3" Content="Ver película" Background="#FFA2E6FD" Cursor="Hand" Width="130" Height="50" FontWeight="Bold" Style="{StaticResource RoundedButton}"/>
