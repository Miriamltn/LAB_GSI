                            <TextBlock x:Name="tb_rutinasPrincipal" 
                           TextWrapping="Wrap" 
                           FontSize="16" 
                           Margin="10" Background="#40ADD8E6"/>
                        </ScrollViewer>

                    </Grid>
                </ScrollViewer>



            </TabItem>

            <!-- Tab Recursos -->
            <TabItem x:Name="P_Recursos" Header="Recursos" >
                <TabItem.Background>
                    <LinearGradientBrush EndPoint="0,1">
                        <GradientStop Color="#FFF0F0F0"/>
                        <GradientStop Color="#FFD4AF37" Offset="1"/>
                    </LinearGradientBrush>
                </TabItem.Background>
                <Grid>
                    <ScrollViewer x:Name="Peliculas_youtube" Margin="-2,-2,395,-4">

