<Window x:Class="LAB_GSI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LAB_GSI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl SelectionChanged="TabControl_SelectionChanged">
            <!-- TabItem Información -->
            <TabItem x:Name="PInformacion" Header="Información">
                <StackPanel>
                    <Expander x:Name="Expander1" HorizontalAlignment="Left" Background="LightGray" Expanded="Expander1_Expanded" Width="320">
                        <Expander.Header>
                            <TextBlock FontSize="16" FontWeight="Bold" Height="25" Width="300">
                                <Run Text="¿Qué es la enfermedad del Alzhéimer?" />
                                <Run Text=" " />
                                <Run Text="&#x9;&#x9;&#x9;" />
                            </TextBlock>
                        </Expander.Header>

                        <StackPanel>
                            <TextBox x:Name="tb_definicion"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"
                                     IsReadOnly="True"
                                     Width="258"
                                     Height="Auto"
                                     TextAlignment="Justify"
                                     Margin="5"
                                     HorizontalScrollBarVisibility="Disabled"
                                     Text="Aquí va la definición de la enfermedad del Alzheimer..." />
                        </StackPanel>
                    </Expander>

                    <!-- Segundo Expander -->
                    <Expander x:Name="Expander2" HorizontalAlignment="Left" Background="LightGray" Expanded="Expander2_Expanded" Width="320">
                        <Expander.Header>
                            <TextBlock FontSize="16" FontWeight="Bold" Height="25" Width="300">
                                <Run Text="¿Cuáles son sus síntomas?" />
                                <Run Text=" " />
                                <Run Text="&#x9;&#x9;&#x9;" />
                            </TextBlock>
                        </Expander.Header>

                        <!-- TextBox para los síntomas -->
                        <TextBox x:Name="tb_sintomas"
                          TextWrapping="Wrap"
                          VerticalScrollBarVisibility="Auto"
                          IsReadOnly="True"
                          Width="258"
                          Height="Auto"
                          TextAlignment="Justify"
                          Margin="5"
                          HorizontalScrollBarVisibility="Disabled"
                          Text="Aquí van los síntomas de la enfermedad del Alzheimer..." />
                    </Expander>

                    <Expander x:Name="Expander3" HorizontalAlignment="Left" Background="LightGray" Expanded="Expander2_Expanded" Width="320">
                        <Expander.Header>
                            <TextBlock FontSize="16" FontWeight="Bold" Height="25" Width="300">
                                <Run Text="¿Cuáles son sus fases?" />
                                <Run Text=" " />
                                <Run Text="&#x9;&#x9;&#x9;" />
                            </TextBlock>
                        </Expander.Header>

                        <!-- TextBox para las fases -->
                        <TextBox x:Name="tb_fases"
                          TextWrapping="Wrap"
                          VerticalScrollBarVisibility="Auto"
                          IsReadOnly="True"
                          Width="258"
                          Height="Auto"
                          TextAlignment="Justify"
                          Margin="5"
                          HorizontalScrollBarVisibility="Disabled"
                          Text="Las fases del Alzheimer son ..." />
                    </Expander>

                    <Expander x:Name="Expander4" HorizontalAlignment="Left" Background="LightGray" Expanded="Expander1_Expanded" Width="320">
                        <Expander.Header>
                            <TextBlock FontSize="16" FontWeight="Bold" Height="25" Width="300">
                                <Run Text="¿Cuáles son sus tratamientos?" />
                                <Run Text=" " />
                                <Run Text="&#x9;&#x9;&#x9;" />
                            </TextBlock>
                        </Expander.Header>

                        <!-- TextBox para los avances -->
                        <TextBox x:Name="tb_avances"
                          TextWrapping="Wrap"
                          VerticalScrollBarVisibility="Auto"
                          IsReadOnly="True"
                          Width="258"
                          Height="Auto"
                          TextAlignment="Justify"
                          Margin="5"
                          HorizontalScrollBarVisibility="Disabled"
                          Text="Las fases del Alzheimer son ..." />
                    </Expander>

                </StackPanel>
            </TabItem>

            <!-- TabItem Dudas -->
            <TabItem x:Name="P_Dudas" Header="Dudas">
                <Grid Margin="0,0,-8,172" Height="408">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="101*"/>
                        <RowDefinition Height="103*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="208*"/>
                        <ColumnDefinition Width="193*"/>
                    </Grid.ColumnDefinitions>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Background="Transparent">
                        <StackPanel x:Name="StackPanel_AI">
                            <!-- Aquí van los elementos dentro del StackPanel -->
                            <Expander x:Name="Expander9" Background="LightGray" IsExpanded="False" Width="391" VerticalAlignment="Top" Expanded="Expander9_Expanded">
                                <Expander.Header>
                                    <TextBlock FontSize="16" FontWeight="Bold" Height="25" Width="366">
                                        <Run Text="¿Relación entre la enfermedad y la nutrición?" />
                                        <Run Text=" " />
                                        <Run Text=" " />
                                        <Run Text=" " />
                                        <Run Text="&#x9;&#x9;&#x9;" />
                                    </TextBlock>
                                </Expander.Header>
                            </Expander>

                            <!-- TextBox para la información de nutrición -->
                            <TextBox x:Name="tb_nutricion"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 IsReadOnly="True"
                 Width="258"
                 Height="Auto"
                 TextAlignment="Justify"
                 HorizontalScrollBarVisibility="Disabled"
                 Background="Transparent"
                 Text="Aquí va el texto de ejemplo para ver cómo se ve en el ScrollViewer. Puede ser un texto largo para probar el desplazamiento." />
                        </StackPanel>
                    </ScrollViewer>


                    <StackPanel x:Name="StackPanel_BI" Margin="0,11,15,0" Grid.Row="1"/>
                    <StackPanel x:Name="StackPanelAD" Margin="401,0,0,204" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
                    <StackPanel x:Name="StackPanel_BD" Margin="401,11,0,-3" Grid.ColumnSpan="2" Grid.Row="1"/>
                    <!-- Aquí colocamos el ToggleButton y el StackPanel -->
                </Grid>
            </TabItem>


            <!-- Otros TabItems -->
            <TabItem x:Name="P_Rutinas" Header="Rutinas">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem x:Name="P_Recursos" Header="Recursos">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem x:Name="P_Cuidador" Header="Cuidador">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
