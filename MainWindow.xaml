<Window x:Class="LAB_GSI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LAB_GSI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl SelectionChanged="TabControl_SelectionChanged">
            <!-- TabItem Información -->
            <TabItem x:Name="PInformacion" Header="Información">
                <StackPanel>
                    <Expander x:Name="Expander1" HorizontalAlignment="Left" Background="LightGray" Expanded="Expander1_Expanded" Width="320">
                        <Expander.Header>
                            <TextBlock FontSize="16" FontWeight="Bold" Height="25" Width="300">
                                <Run Text="¿Qué es la enfermedad del Alzhéimer?" />
                                <Run Text=" " />
                                <Run Text="&#x9;&#x9;&#x9;" />
                            </TextBlock>
                        </Expander.Header>

                        <StackPanel>
                            <TextBox x:Name="tb_definicion"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"
                                     IsReadOnly="True"
                                     Width="258"
                                     Height="Auto"
                                     TextAlignment="Justify"
                                     Margin="5"
                                     HorizontalScrollBarVisibility="Disabled"
                                     Text="Aquí va la definición de la enfermedad del Alzheimer..." />
                        </StackPanel>
                    </Expander>

                    <!-- Segundo Expander -->
                    <Expander x:Name="Expander2" HorizontalAlignment="Left" Background="LightGray" Expanded="Expander2_Expanded" Width="320">
                        <Expander.Header>
                            <TextBlock FontSize="16" FontWeight="Bold" Height="25" Width="300">
                                <Run Text="¿Cuáles son sus síntomas?" />
                                <Run Text=" " />
                                <Run Text="&#x9;&#x9;&#x9;" />
                            </TextBlock>
                        </Expander.Header>

                                        <!-- TextBox para los síntomas -->
                          <TextBox x:Name="tb_sintomas"
                          TextWrapping="Wrap"
                          VerticalScrollBarVisibility="Auto"
                          IsReadOnly="True"
                          Width="258"
                          Height="Auto"
                          TextAlignment="Justify"
                          Margin="5"
                          HorizontalScrollBarVisibility="Disabled"
                          Text="Aquí van los síntomas de la enfermedad del Alzheimer..." />         
                    </Expander>
                </StackPanel>
            </TabItem>

            <!-- TabItem Dudas -->
            <TabItem x:Name="P_Dudas" Header="Dudas">
                <Grid>
                    <!-- Aquí colocamos el ToggleButton y el StackPanel -->
                    <ToggleButton x:Name="toggleButton1" Content="Mostrar Información" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="43,30,0,0"/>
                    <StackPanel x:Name="stackPanel1" Background="#FF17F9C0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,50,0,0" Visibility="Collapsed">
                        <!-- Contenido del StackPanel -->
                        <TextBlock Text="En la etapa avanzada de la demencia grave por enfermedad de Alzheimer, las personas suelen: Perder la capacidad para comunicarse. Las personas ya no pueden conversar o hablar de una manera que tenga sentido, aunque ocasionalmente puedan decir palabras o frases. Requerir asistencia diaria con el cuidado personal." 
                            Margin="18"
                            TextWrapping="Wrap"
                            Width="400"
                            Height="Auto"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Otros TabItems -->
            <TabItem x:Name="P_Rutinas" Header="Rutinas">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem x:Name="P_Recursos" Header="Recursos">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem x:Name="P_Cuidador" Header="Cuidador">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
