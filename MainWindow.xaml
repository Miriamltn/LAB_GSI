                                    <Expander.Header>
                                        <TextBlock TextWrapping="Wrap" FontSize="14" FontWeight="Bold" Text="Siempre Alice"/>
                                    </Expander.Header>
                                    <StackPanel
                                        Margin="24,8,24,16"
                                        Orientation="Vertical">
                                        <Image x:Name="image2" Height="100" Width="100" Source="/imagenes/libro3.jpg"/>
