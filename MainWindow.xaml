                                            <Button x:Name="video1" Click="AbrirVideo1" Content="Ver película" Background="#FFA2E6FD" Cursor="Hand" Width="130" Height="50" FontWeight="Bold" Style="{StaticResource RoundedButton}"/>
                                            <Image Source="imagenes/peli1.jpeg" Width="100" Height="100" HorizontalAlignment="Right"/>
